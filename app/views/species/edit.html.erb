<h1>Edit the Species</h1>

<% if @species.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @species.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action='/species' type='hidden' method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='species_species'>Species</label>
  <input id='species_species' name='species[species]' type='text' value='<%= @species.species %>'>
  <button>Add Species</button>
</form>
