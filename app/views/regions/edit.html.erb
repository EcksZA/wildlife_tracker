<h1>Edit Region</h1>

<% if @region.errors.any? %>
  <p>Please fix these errors:</p>
  <ul>
    <% @region.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/regions/<%= @region.id %>" method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='region_name'>Name</label>
  <input id='region_name' name='region[name]' type='text' value='<%= @region.name %>'>
  <button>Edit Region</button>
</form>
